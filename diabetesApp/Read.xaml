<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="diabetesApp.Read"
             Title="Read">
    <VerticalStackLayout>
        <Label 
            Text="Wait for data, please wait"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            x:Name="message"/>


        <Button Clicked="ShowStats" Text="Get data again">

        </Button>

        <Label x:Name="countdownLabel"></Label>
        <Button Text="Stop Countdown" Clicked="StopCountDownButton"></Button>
    </VerticalStackLayout>
</ContentPage>